@model Cake

<h3 class="my-5">
    @Model.Name
</h3>
<hr class="underline" />

<div class="row gx-5">
    <img class="img-fluid col-5" src="@Model.ImageUrl" alt="@Model.Name" />
    <div class="col-7">
        <h4>@Model.Description</h4>
        <h3 class="pull-right">@Model.Price.ToString("c2")</h3>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-secondary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-cakeId="@Model.CakeId">Add to cart</a>
            </p>
        </div>
    </div>
</div>