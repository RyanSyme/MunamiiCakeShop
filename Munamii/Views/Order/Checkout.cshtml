@model Order

<form asp-action="Checkout" method="post" role="form" class="mt-1">
    <h3 class="my-5">Please enter your details</h3>

    <div asp-validation-summary="All" class="text-danger" ></div>
    
    @*customer order form*@
    <div>
        <div class="row">
            <div class="col-12">
                <label asp-for="FirstName" class="form-label about-text"></label>
                <input asp-for="FirstName" class="form-control form-text" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="LastName" class="form-label about-text"></label>
                <input asp-for="LastName" class="form-control form-text" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Address" class="form-label about-text"></label>
                <input asp-for="Address" class="form-control form-text" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="PostCode" class="form-label about-text"></label>
                <input asp-for="PostCode" class="form-control form-text" />
                <span asp-validation-for="PostCode" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="City" class="form-label about-text"></label>
                <input asp-for="City" class="form-control form-text" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Email" class="form-label about-text"></label>
                <input asp-for="Email" class="form-control form-text" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-2">
            <div class=col-offset-5>
                <input type="submit" class="btn btn-card" value=Complete Order />
            </div>
        </div>
    </div>
</form>